{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "StepCast",
  "version": "../package.json",
  "identifier": "com.w0nk1.stepcast",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "StepCast",
        "width": 340,
        "height": 554,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": {
        "default-src": "'self' asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'self' 'unsafe-inline'",
        "font-src": "'self'",
        "script-src": "'self'"
      },
      "devCsp": {
        "default-src": "'self' http://localhost:1420 asset:",
        "connect-src": "ipc: http://ipc.localhost ws://localhost:1420 http://localhost:1420",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'self' 'unsafe-inline' http://localhost:1420",
        "script-src": "'self' 'unsafe-eval' http://localhost:1420"
      },
      "capabilities": ["default", "editor"],
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/Library/Caches/**", "$TEMP/**"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/w0nk1/StepCast/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM5NEZCMzY1RjhCQzREMDUKUldRRlRiejRaYk5QT2NBamFGR1hxdjNtUEtMUDgzOTFXQ25Ub2JaVXJIRzBiLzR0c2c1YUNDbDYK"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "macOS": {
      "entitlements": "./Entitlements.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "icons/icon.png",
      "icons/tray.png",
      "icons/tray@2x.png",
      "icons/recording.png",
      "icons/recording@2x.png",
      "icons/stop.png",
      "icons/stop@2x.png"
    ]
  }
}
