{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "macos-permissions:default",
    "allow-check-permissions",
    "allow-request-screen-recording",
    "allow-request-accessibility",
    "allow-start-recording",
    "allow-pause-recording",
    "allow-resume-recording",
    "allow-stop-recording",
    "allow-get-steps",
    "allow-export-guide",
    "allow-discard-recording",
    "allow-greet",
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        { "url": "x-apple.systempreferences:*" },
        { "url": "https://github.com/w0nk1/StepCast*" }
      ]
    },
    "opener:allow-reveal-item-in-dir",
    "dialog:default",
    "updater:default",
    "process:allow-restart",
    "aptabase:allow-track-event"
  ]
}
